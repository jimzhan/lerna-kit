{
  "name": "lerna-kit",
  "version": "0.1.0",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": "airbnb-base",
    "env": {
      "node": true,
      "jest/globals": true
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "lint-staged": {
    "src/**/*.{mjs,js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "start": "lerna exec -- npm start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
	"devDependencies": {
		"lerna": "^2.11.0"
	}
}
