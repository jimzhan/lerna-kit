{
  "name": "lerna-kit",
  "version": "0.1.0",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": "airbnb-base",
    "env": {
      "node": true,
      "jest/globals": true
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "lint-staged": {
    "src/**/*.{mjs,js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "preinstall": "./bin/bootstrap",
    "start": "lerna exec -- npm start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "lerna": "^2.11.0"
  },
  "dependencies": {
    "assert": "^1.4.1",
    "commander": "^2.16.0",
    "glob": "^7.1.2",
    "inquirer": "^6.0.0",
    "is-valid-npm-name": "0.0.4",
    "shelljs": "^0.8.2",
    "shx": "^0.3.1",
    "validate-npm-package-name": "^3.0.0",
    "write-pkg": "^3.2.0"
  }
}
